{
    "manifest_version": 2,
    "name": "Emoticut",
    "description": "Replaces text triggers with emojis (e.g. <sun> with ☀️)",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "emocut.png",
        "32": "emocut.png",
        "48": "emocut.png",
        "128": "emocut.png"
    }
}